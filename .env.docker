# THEA Backend Environment Configuration
# Production Environment Variables

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=mysql://thea_user:thea_password@mysql:3306/thea_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379

# MinIO Configuration
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=thea-minio-user
MINIO_SECRET_KEY=thea-minio-password-2024
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=thea-documents

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=thea-user
RABBITMQ_PASSWORD=thea-password
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://thea-user:thea-password@rabbitmq:5672/

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@thea.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-2024

# OCR Service Configuration (if you have one)
OCR_SERVICE_URL=http://localhost:8000
OCR_API_KEY=your-ocr-api-key

# Monitoring and Health Check
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_METRICS_ENABLED=true
